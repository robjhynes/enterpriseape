<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @invoice.date %>
</p>

<p>
  <strong>Company:</strong>
  <%= @invoice.company %>
</p>

<p>
  <strong>Tax:</strong>
  <%= @invoice.tax %>
</p>

<p>
  <strong>Salesperson:</strong>
  <%= @invoice.employee.name %>
</p>


<div class="media">
  <div class="body">
    <table class="table table-hover">
     <thead>
       <tr>
         <th>Name</th>
         <th>Category</th>
         <th>Qty</th>
       </tr>
      </thead>
      <tbody>
        <% @purchases.each do |p| %>
        <tr>
          <td><h4><%= p.name %></h4></td>
          <td><h4><%= p.category %></h4></td>
          <td><h4><%= p.quantity %></h4></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>  
</div>

<%= link_to 'Edit', edit_invoice_path(@invoice) %> |
<%= link_to 'Back', invoices_path %>
